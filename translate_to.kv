                    specific_text_color: get_color_from_hex("#eeeeee")
                    left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
                    right_action_items: [['dots-vertical', lambda x: app.callback_menu(x)]]

                FloatLayout:

					MDTextField:
						id: txt
						text: 'Era uma casa muito engra√ßada.'
						hint_text: 'Text'
						pos_hint: {'center_x': .5, 'center_y': .75}
						halign: 'center'
						size_hint_x: .88
						md_bg_color: .2, .2, .2, 1

