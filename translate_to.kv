					MDRaisedButton:
						text: 'Translate'
						md_bg_color: .2, .2, .2, 1
						pos_hint: {'center_x': .5, 'center_y': .6}
						halign: 'center'
						size_hint_x: .88
						on_release: app.translate()

					FloatLayout:
					    size_hint_y: .4
					    pos_hint_y: .3
					    height: .6

					    canvas:
					        Color:
					            rgba: .2,.2,.1,.2
					        Rectangle:
					            pos: self.pos
					            size: self.size

					    FloatLayout:
					    	pos_hint_y: .7
					    	pos_hint_x: .5
					    	halign: 'center'
					    	size_hint: .999,.999

					    	MDCard:
						        orientation: "vertical"
						        padding: "8dp"
						        size_hint: None, None
						        size: "280dp", "180dp"
						        pos_hint: {"center_x": .5, "center_y": .8}

						        MDLabel:
						            text: "From Portuguese to English"
						            font_style: 'H6'
						            theme_text_color: "Secondary"
						            adaptive_height: True

						        MDSeparator:
						            height: "1dp"

						        MDIconButton:
						            icon: 'heart-outline'

					    	
								ScrollView:
									halign: 'center'

									height: root.height
									size_hint_y: .8
									pos_hint_x: .5

									MDList:
										halign: 'center'
									    MDLabel:

									    	id: label
									        size_hint_y: None
									        height: self.texture_size[1]


						FloatLayout:
							MDFloatingActionButton:
							    icon: "book-plus"
							    md_bg_color: .2, .2, .2, 1
							    elevation_normal: 12
							    pos_hint: {'center_x': .9, 'center_y': .3}
							    on_release: app.save_text()

					    MDSpinner:
					    	id: spin
					        size_hint: None, None
					        size: dp(46), dp(46)
					        pos_hint: {'center_x': .5, 'center_y': .8}
					        active: False


			        MDNavigationDrawer:
